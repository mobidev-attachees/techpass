datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model StoreEvent {
  id                Int       @id @default(autoincrement())
  eventName         String
  eventDescription  String
  location          String
  country           String?
  city              String?
  startDate         DateTime
  endDate           DateTime
  startTime         String   // Keep as String if time type is not supported
  endTime           String   // Keep as String if time type is not supported
  meetingLink       String?
  email             String
  tittle             String  // Corrected typo from tittle to title
  ticketPrice       String?
  firstName         String
  middleName        String?
  lastName          String
  phoneNumber       String
  websiteLink       String?
  facebookLink      String?
  instagramLink     String?
  twitterLink       String?
  imageUrl          String? 
  userId            Int
  user              User      @relation(fields: [userId], references: [id]) // Add this line to establish the relation
}

model User {
  id             Int       @id @default(autoincrement())
  username       String    @unique
  email          String    @unique
  password       String
  firstName      String?
  lastName       String?
  address        String?
  profileImage   String?
  dob            DateTime?
  country        String?
  city           String?
  phoneNumber    String?
  github         String?
  twitter        String?
  website        String?
  instagram      String?
  facebook       String?
  linkedlin      String?
  bio            String? 
  sessions       Session[] // Define the many-to-many relation without references
  events         StoreEvent[] // Add this line to establish the relation
}

model Session {
  id                Int       @id @default(autoincrement())
  sessionName       String
  sessionDescription String
  startTime         String   // Keep as String if time type is not supported
  endTime           String   // Keep as String if time type is not supported
  speaker           String
  users             User[]    // Define the many-to-many relation without references
}
